<% content_for :navbar do %>
     <%= render 'shared/nav-blank' %>
<% end %>

<div class="row">
  <div class="col-md-3">
    <%= render 'establishment_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Description
      </div>

      <div class="panel-body">
        <div class="container">
           <%= form_for @establishment do |f| %>

            <div class="row">
              <div class="form-group">
                <label>Nom du listing</label>
                <%= f.text_field :listing_name, placeholder: "Nom de votre chambre", class: "form-control" %>
              </div>
            </div>

            <div class="row">
              <div class="form-group">
                <label>Description</label>
                <%= f.text_area :summary, rows: 5, placeholder: "Description de votre chambre", class: "form-control" %>
              </div>
            </div>


            <div class="text-center">
              <%= f.submit "Sauvegardez", class: "btn btn-form" %>
            </div>

          <% end  %>
        </div>
      </div>

    </div>
  </div>
</div>
