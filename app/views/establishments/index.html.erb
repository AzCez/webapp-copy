<div class="row">
  <div class="col-md-3">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "Votre Listing", establishments_path, class: "sidebar-link active" %></li>
       <li class="sidebar-item"><%= link_to "Votre Reservation", establishments_path, class: "sidebar-link active" %></li>
    </ul>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        Listings
      </div>
      <div class="panel-body">

        <% @establishments.each do |establishment| %>
          <div class="row">
            <div class="col-md-2">
              <%= image_tag establishment.cover_photo(:thumb) %>
            </div>
            <div class="col-md-7">
              <h4><%= establishment.listing_name %></h4>
            </div>
            <div class="col-md-3 right">
              <%= link_to "Update", listing_establishment_path(establishment), class:"btn btn-form" %>
            </div>
          </div>
          <hr/>
        <% end %>
      </div>
    </div>
  </div>




</div>
