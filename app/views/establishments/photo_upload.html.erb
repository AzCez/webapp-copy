<% content_for :navbar do %>
     <%= render 'shared/nav-blank' %>
<% end %>

<div class="row">
  <div class="col-md-3">
    <%= render 'establishment_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Photos
      </div>

      <div class="panel-body">
        <div class="container">
          <div class="row">
            <div class="col-md-offset-3 col-md-6">
              <!-- Photos Upload goes here -->
                <div class="row">
                  <div class="col-4">
                  </div>
                  <div class="col-8">
                  <%= form_for @establishment, url: establishment_photos_path(@establishment), method: :post do |f| %>
  <!-- [...] -->
                    <%= f.file_field :photos, multiple: true %>
                    <%= f.submit "Ajouter des photos", class: "btn btn-primary" %>
  <!-- [...] -->
                  <% end %>

                  <%= render 'photos/photos_list' %>
                  </div>
                </div>

            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
