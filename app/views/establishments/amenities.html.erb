<% content_for :navbar do %>
     <%= render 'shared/nav-blank' %>
<% end %>

<div class="row">
  <div class="col-md-3">
    <%= render 'establishment_menu' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">

      <div class="panel-heading">
        Equipements
      </div>

      <div class="panel-body">
        <div class="container">
          <%= form_for @establishment do |f| %>

          <div class="row form-group">
            <div class="col-md-4">
              <%= f.check_box :is_tv %> TV
            </div>
            <div class="col-md-4">
              <%= f.check_box :is_kitchen %> Kitchen
            </div>
            <div class="col-md-4">
              <%= f.check_box :is_internet %> Internet
            </div>
            <div class="col-md-4">
              <%= f.check_box :medical_bed %> Lit Medical
            </div>

            <div class="col-md-4">
              <%= f.check_box :is_heating %> Chauffage
            </div>
            <div class="col-md-4">
              <%= f.check_box :is_air %> AC
            </div>
          </div>
          <br/><br/>

          <div class="text-center">
            <%= f.submit "Sauvegardez", class: "btn btn-form" %>
          </div>

          <% end  %>
        </div>
      </div>

    </div>
  </div>
</div>
