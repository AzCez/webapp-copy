<% content_for :navbar do %>
    <%= render 'shared/navbar3' %>
<% end %>

<!-- Establishment Body -->
<div class="mt-5">

  <div class="bandeau text-center">
    <h5><strong>Notre site est en train de se faire une beauté...si il y a quelques bugs...ils sont en cours de traitements ne vous inquiétez pas!</strong></h5>
  </div>

<section class="container pt-5 pb-5" id="establishment-body">

<!-- Establishment Container -->

  <div class="row pt-2 pb-2" id="establishment-container">

<!-- Establishment Left Filter -->

    <div class="col-3" id="establishment-left-filter">

<!-- Contact Customer Care  -->



      <div class="container mb-4">
        <h5 class="font-weight-bold">En cas de besoin :</h5>
      </div>
      <div class="mb-4 mx-auto text-center">
          <div class="container seach-filter">
            <div class="seach-filter-container" style="padding-left:3%;">
              <p><strong>N'hesitez pas à nous appeler au</strong></p>
              <p><strong>09.82.32.35.16<i class="fas fa-phone"></i></strong></p>
              <p>N'oubliez pas de nous indiquer le numéro de cette annonce:</p>
              <p><strong><%= @establishment.id %></strong></p>
            </div>
          </div>
      </div>
      <div class="seach-filter-container text-center">
        <a href="#Reservation" class="btn-reserve-room">
          RESERVER
        </a>
      </div>
    </div>

<!-- Establishment Container Info -->

    <div class="col-9" id="establishment-container-info">

<!-- Establishment Tabs -->

      <div class="container mb-5" id="establishment-tabs">
        <ul class="list-inline tabs-underlined">
          <li>
            <a href="#Description" class="tab-underlined active">Description</a>
          </li>
          <li>
            <a href="#Equipements" class="tab-underlined">Equipements</a>
          </li>
          <li>
            <a href="#Reservation" class="tab-underlined">Réservation</a>
          </li>
          <li>
            <a href="#Commentaires" class="tab-underlined">Commentaires clients</a>
          </li>
        </ul>
      </div>
      <div class="card-room-infos card-room-top">
          <div class="container">

<!-- Establishment Header -->

            <div class="row" id="establishment-header">
              <div class="col-md-8" >

<!-- Establishment Tite -->

                <h4><%= @establishment.listing_name %></h4>

<!-- Location ICON -->

                <h6 style="display:inline;"><i class="fas fa-map-marker-alt fa-sm"></i>

<!-- City name here (e.gParis) -->

                <%= @establishment.city %>
                </h6>
                <!-- <p style="display:inline;">(500 m du centre)</p> -->
              </div>

<!-- Establishment Rating -->

              <div class="col-md-4" id="establishment-rating">

                <div class="right-card-text mr-2">
                <%= image_tag "web/logo/bigbee.svg", alt: "Mon image", class: "bee-card", "data-toggle" => "modal", 'data-target' => '#exampleModalCenter' %>
                <%= image_tag "web/logo/bigbee.svg", alt: "Mon image", class: "bee-card", "data-toggle" => "modal", 'data-target' => '#exampleModalCenter' %>
                <%= image_tag "web/logo/bigbee.svg", alt: "Mon image", class: "bee-card", "data-toggle" => "modal", 'data-target' => '#exampleModalCenter' %>
                <%= image_tag "web/logo/bigbee.svg", alt: "Mon image", class: "bee-card", "data-toggle" => "modal", 'data-target' => '#exampleModalCenter' %>
                <p>Hébergement très accessible<p>
                  <a href="#Reservation" class="btn-show-room">
                    Voir les disponibilités <i class="fas fa-chevron-right"></i>
                  </a>
                </div>
              </div>
            </div>

<!-- Establishment Separation Line  -->

            <hr />

<!-- Establishment Photos -->

            <div class="container">
              <div class="row">
                <div class="show-views col-md-8">
                  <img src="<%= @establishment.first_image %>"/>
                </div>

<!-- MODAL Pic -->
                <div class="col-md-4 show-views-little">
                <img src="<%= @establishment.first_image %>" class="mb-2" data-toggle="modal" data-target="#exampleModal"
                />

<!-- OVERLAY AND PIC COUNT -->

                    <div class = "overlay-pic"data-toggle="modal" data-target="#exampleModal">
                      <h2>
                        +3
                      </h2>
                    </div>


<!-- OVERLAY AND PIC COUNT END -->



<!-- MAP BEGIN -->

                <div
                  id="map"
                  class="establishment-map"
                  data-markers="<%= @markers.to_json %>"
                  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
                ></div>

<!-- MAP END -->

                </div>

<!-- MODAL Pic END -->

              </div>
            </div>





<!-- Establishment Photos END -->


        </div>
      </div>

      <div class="card-room-infos card-room-top">
        <div class="container">
        <div class="row mt-5">
          <div class="col-md-8">
            <div class="container show-views" id="Description">
              <h2 class="mb-2">
                <%= @establishment.home_type %>
              </h2>
              <p class="mt-4">
                <%= sanitize @establishment.summary %>
              </p>
            </div>
          </div>
          <div class="col-md-4">
              <div class="accessible-container">
                <p><strong>Les plus d'accessibilité:</strong></p>
                <ul>
                  <li class="<%= 'text-line-display' if !@establishment.pmr_room_type %>"><%= @establishment.pmr_room_type %></li>
                  <li class="<%= 'text-line-display' if !@establishment.suitable_swimming_pool %>">Piscine adaptée</li>
                  <li class="<%= 'text-line-display' if !@establishment.medical_bed %>">Lit médicalisé accepté</li>
                  <li class="<%= 'text-line-display' if !@establishment.person_lift %>">Lève personnes accepté</li>
                  <li>Salle de bain adaptée</li>
                  <li class="<%= 'text-line-display' if !@establishment.suitable_shower %>">Douche à l'italienne</li>
                  <li>Chaise de douche acceptée</li>
                  <li class="<%= 'text-line-display' if !@establishment.one_level %>">Logement de plein pied</li>
                </ul>
              </div>
          </div>
        </div>
        <hr />
        <div class="row">
          <div class="col-md-12">
            <div class="container">
              <h2 class="mb-2" id="Equipements">Les plus de cet hébergement</h2>
              <div><strong><%= @establishment.home_type %> comprenant <%= @establishment.accommodate %> couchages</div>
              <div><%= @establishment.bed_room %> chambres et <%= @establishment.bath_room %> salle de bains</strong></div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
  </div>


        <hr />

  <div class="row">
    <div class="col-md-12 text-center">

 <div class="container mb-4">
        <h5 class="font-weight-bold" id="Reservation">Réserver un hébergement</h5>
      </div>





      <%= render 'reservations/form' %>

    </div>
  </div>
</section>

</div>


