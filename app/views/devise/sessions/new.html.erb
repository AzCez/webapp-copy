<% content_for :navbar do %>
     <%= render 'shared/nav-connection' %>
<% end %>


<div class="row justify-content-center">
  <div class="col-5 mb-5">
    <h2 class="text-center">Se connecter</h2>
    <br/>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    label: false,
                    placeholder: "Votre email",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    label: false,
                    placeholder: "Votre mot de passe",
                    input_html: { autocomplete: "current-password" } %>
        <div>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %> Se souvenir de moi
          <% end %>
          <!-- <span class="pull-right">
            <%#= link_to "Mot de passe perdu ?", new_user_password_path %>
          </span> -->
        </div>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit, "Connexion", class: "btn btn-flat" %>
      </div>
    <% end %>
    <hr/>
    <div class="text-center">
      <%= link_to "Connexion avec facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
