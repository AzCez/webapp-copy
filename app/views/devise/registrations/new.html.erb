<% content_for :navbar do %>
     <%= render 'shared/nav-new-connection' %>
<% end %>

<div class="row justify-content-center">
  <div class="col-5 mb-5">
    <h2 class="text-center">Créer un compte</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs mb-2">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Votre email",
                    input_html: { autocomplete: "email" }%>
        <%= f.input :first_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Votre prénom",
                    input_html: { autocomplete: "first_name" }%>
        <%= f.input :last_name,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Votre nom de famille",
                    input_html: { autocomplete: "last_name" }%>
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: "Mot de passe",
                    hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                    input_html: { autocomplete: "password" } %>
      </div>

      <div class="form-actions text-center">
            <%= f.button :submit, "Créer un compte", class: "btn btn-flat" %>
      </div>
    <% end %>
    <hr/>
    <div class="text-center">
      <%#= link_to "Se connecter avec facebook", user_facebook_omniauth_authorize_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>
